                          Stroke="#FFFF8C00" 
                          StrokeThickness="1.5" 
                          Fill="Transparent"
                          Stretch="Uniform"
                           Width="28" Height="28"/>
                </Button>

                <!-- Separator between Full Screen and OBS Recording -->
                <Rectangle x:Name="RecordingSelectionSeparator2"
                           Width="1" 
                           Height="25" 
                           Fill="#FFFF8C00" 
                           Margin="8,0"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>

                <!-- OBS Record Button (Hidden by default) -->
                <Button x:Name="OBSRecordButton" 
                        Style="{StaticResource ToolbarButtonStyle}"
                        Click="OBSRecordButton_Click"
                        ToolTip="Launch OBS Studio"
                        Width="60"
                        Visibility="Collapsed">
                    <Path Data="{StaticResource OBSIcon}" 
                          Stroke="#FFFF8C00" 
                          StrokeThickness="1.2" 
                          StrokeLineJoin="Round"
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round"
                          Fill="Transparent"
                          Stretch="Uniform"
                          Width="45" Height="45"/>
                </Button>

                <!-- Separator for Cancel Button -->
                <Rectangle x:Name="RecordingSelectionSeparator3"
                           Width="1" 
                           Height="25" 
                           Fill="#FFFF8C00" 
                           Margin="8,0"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>

                <!-- Cancel Recording Button (Hidden by default) -->
                <Button x:Name="CancelRecordButton" 
                        Style="{StaticResource ToolbarButtonStyle}"
                        Click="CancelRecordButton_Click"
                        ToolTip="Cancel Recording"
                        Width="60"
                        Visibility="Collapsed">
                    <Path Data="M1 1L11 11M11 1L1 11" 
                          Stroke="#FFFF8C00" 
                          StrokeThickness="2" 
                          Fill="Transparent"
                          Stretch="Uniform"
                          Width="20" Height="20"/>
                </Button>

                <!-- Stop Recording Button (Hidden by default) -->
                <Button x:Name="StopRecordButton" 
                        Style="{StaticResource IconButtonStyle}"
                        Click="StopRecordButton_Click"
                        ToolTip="Stop Recording (FFmpeg)"
                        Visibility="Collapsed">
                    <Path Data="{StaticResource StopIcon}" 
                          Stroke="#FFFF8C00" 
                          StrokeThickness="1.5" 
                          Fill="Transparent"
                          Stretch="Uniform"
                          Width="20" Height="20"/>
                </Button>

                <!-- Cancel Recording Button (Hidden by default) -->
                <Button x:Name="PauseRecordButton" 
                        Style="{StaticResource IconButtonStyle}"
                        Click="PauseRecordButton_Click"
                        ToolTip="Cancel Recording"
                        Visibility="Collapsed">
                    <Path Data="{StaticResource CancelIcon}" 
                          Stroke="#FFFF8C00" 
                          StrokeThickness="1.5" 
                          Fill="Transparent"
                          Stretch="Uniform"
                          Width="20" Height="20"/>
                </Button>
            </StackPanel>

            <!-- Recording Timer -->
            <TextBlock x:Name="RecordingTimer" 
                       Grid.Row="1"
                       Text="00:00"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="{StaticResource AccentBrush}"
                       FontSize="12"
                       FontWeight="Bold"
                       Visibility="Collapsed"
                       Margin="0,0,0,5"/>
        </Grid>
    </Border>
</Window> 