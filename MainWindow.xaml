                    <Setter Property="Background" Value="#FFFF8C00"/>
                    <Setter Property="Foreground" Value="#FF000000"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#FFFF8C00" BlurRadius="15" ShadowDepth="0" Opacity="0.7"/>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
