<Window x:Class="SharpShot.UI.ScreenshotEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Screenshot"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Editing Tool Button Style -->
        <Style x:Key="EditToolButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#15FF8C00"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#30FF8C00"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True">
                                <Setter Property="Background" Value="#40FF8C00"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#CC000000">
        <!-- Main editing area -->
        <Canvas x:Name="EditingCanvas" 
                Background="Transparent"
                ClipToBounds="True">
            
            <!-- Screenshot image -->
            <Image x:Name="ScreenshotImage" 
                   Stretch="None"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
            
            <!-- Editing overlay canvas for drawings -->
            <Canvas x:Name="OverlayCanvas" 
                    Background="Transparent"/>
        </Canvas>

        <!-- Bottom editing toolbar -->
        <Border Background="#D0000000" 
                CornerRadius="8" 
                Padding="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,20">
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                
                <!-- Blur Tool -->
                <Button x:Name="BlurButton" 
                        Style="{StaticResource EditToolButtonStyle}"
                        Click="BlurButton_Click"
                        ToolTip="Blur">
                    <Ellipse Width="20" Height="20" 
                             Fill="{DynamicResource AccentBrush}" 
                             Opacity="0.6"/>
                </Button>

                <!-- Arrow Tool -->
                <Button x:Name="ArrowButton" 
                        Style="{StaticResource EditToolButtonStyle}"
                        Click="ArrowButton_Click"
                        ToolTip="Arrow">
                    <Path Data="M2 2L14 14M14 14V8M14 14H8" 
                          Stroke="{DynamicResource AccentBrush}" 
                          StrokeThickness="2"
                          Fill="Transparent"
                          Stretch="Uniform"
                          Width="18" Height="18"/>
                </Button>

                <!-- Rectangle Tool -->
                <Button x:Name="RectangleButton" 
                        Style="{StaticResource EditToolButtonStyle}"
                        Click="RectangleButton_Click"
                        ToolTip="Rectangle">
                    <Rectangle Width="20" Height="15" 
                               Stroke="{DynamicResource AccentBrush}" 
                               StrokeThickness="2" 
                               Fill="Transparent"/>
                </Button>

                <!-- Circle Tool -->
                <Button x:Name="CircleButton" 
                        Style="{StaticResource EditToolButtonStyle}"
                        Click="CircleButton_Click"
                        ToolTip="Circle">
                    <Ellipse Width="20" Height="20" 
                             Stroke="{DynamicResource AccentBrush}" 
                             StrokeThickness="2" 
                             Fill="Transparent"/>
                </Button>

                <!-- Line Tool -->
                <Button x:Name="LineButton" 
                        Style="{StaticResource EditToolButtonStyle}"
                        Click="LineButton_Click"
                        ToolTip="Line">
                    <Line X1="2" Y1="18" X2="18" Y2="2" 
                          Stroke="{DynamicResource AccentBrush}" 
                          StrokeThickness="2"/>
                </Button>

                <!-- Pen Tool -->
                <Button x:Name="PenButton" 
                        Style="{StaticResource EditToolButtonStyle}"
                        Click="PenButton_Click"
                        ToolTip="Pen">
                    <Path Data="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" 
                          Fill="{DynamicResource AccentBrush}" 
                          Stretch="Uniform"
                          Width="18" Height="18"/>
                </Button>

                <!-- Text Tool -->
                <Button x:Name="TextButton" 
                        Style="{StaticResource EditToolButtonStyle}"
                        Click="TextButton_Click"
                        ToolTip="Text">
                    <TextBlock Text="A" 
                               Foreground="{DynamicResource AccentBrush}" 
                               FontSize="20" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Button>

                <!-- Highlight Tool -->
                <Button x:Name="HighlightButton" 
                        Style="{StaticResource EditToolButtonStyle}"
                        Click="HighlightButton_Click"
                        ToolTip="Highlight">
                    <Rectangle Width="20" Height="8" 
                               Fill="#AAFFFF00" 
                               Stroke="Transparent"/>
                </Button>

                <!-- Separator -->
                <Rectangle Width="1" 
                           Height="30" 
                           Fill="{DynamicResource AccentBrush}" 
                           Margin="8,0"/>

                <!-- Undo -->
                <Button x:Name="UndoButton" 
                        Style="{StaticResource EditToolButtonStyle}"
                        Click="UndoButton_Click"
                        ToolTip="Undo">
                    <Path Data="M12 8V4L8 8L12 12V8.7C13.3 8.7 15 9.5 15 12C15 13 14.7 13.9 14.1 14.5L15.5 16C16.4 14.9 17 13.5 17 12C17 8.5 14.1 6 12 6V8Z" 
                          Fill="{DynamicResource AccentBrush}" 
                          Stretch="Uniform"
                          Width="18" Height="18"/>
                </Button>

                <!-- Redo -->
                <Button x:Name="RedoButton" 
                        Style="{StaticResource EditToolButtonStyle}"
                        Click="RedoButton_Click"
                        ToolTip="Redo">
                    <Path Data="M12 8V4L16 8L12 12V8.7C10.7 8.7 9 9.5 9 12C9 13 9.3 13.9 9.9 14.5L8.5 16C7.6 14.9 7 13.5 7 12C7 8.5 9.9 6 12 6V8Z" 
                          Fill="{DynamicResource AccentBrush}" 
                          Stretch="Uniform"
                          Width="18" Height="18"/>
                </Button>

                <!-- Separator -->
                <Rectangle Width="1" 
                           Height="30" 
                           Fill="{DynamicResource AccentBrush}" 
                           Margin="8,0"/>

                <!-- Copy -->
                <Button x:Name="CopyFinalButton" 
                        Style="{StaticResource EditToolButtonStyle}"
                        Click="CopyFinalButton_Click"
                        ToolTip="Copy to Clipboard"
                        Width="60">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M8 4v12a2 2 0 002 2h8a2 2 0 002-2V7.242a2 2 0 00-.602-1.43L16.083 2.57A2 2 0 0014.685 2H10a2 2 0 00-2 2z" 
                              Stroke="{DynamicResource AccentBrush}" 
                              StrokeThickness="1.5" 
                              Fill="Transparent"
                              Stretch="Uniform"
                              Width="16" Height="16"
                              Margin="0,0,4,0"/>
                        <TextBlock Text="Copy" 
                                   Foreground="{DynamicResource AccentBrush}" 
                                   FontSize="12" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Save -->
                <Button x:Name="SaveFinalButton" 
                        Style="{StaticResource EditToolButtonStyle}"
                        Click="SaveFinalButton_Click"
                        ToolTip="Save File"
                        Width="60">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M3 17.25V21h18v-3.75M6 9v6m0 0l4-4m-4 4l-4-4m8 4V9" 
                              Stroke="{DynamicResource AccentBrush}" 
                              StrokeThickness="1.5" 
                              Fill="Transparent"
                              Stretch="Uniform"
                              Width="16" Height="16"
                              Margin="0,0,4,0"/>
                        <TextBlock Text="Save" 
                                   Foreground="{DynamicResource AccentBrush}" 
                                   FontSize="12" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Separator -->
                <Rectangle Width="1" 
                           Height="30" 
                           Fill="{DynamicResource AccentBrush}" 
                           Margin="8,0"/>

                <!-- Close/Cancel -->
                <Button x:Name="CloseEditorButton" 
                        Style="{StaticResource EditToolButtonStyle}"
                        Click="CloseEditorButton_Click"
                        ToolTip="Close Editor">
                    <Path Data="M18 6L6 18M6 6l12 12" 
                          Stroke="{DynamicResource AccentBrush}" 
                          StrokeThickness="2"
                          Fill="Transparent"
                          Stretch="Uniform"
                          Width="20" Height="20"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- Color picker panel (initially hidden) -->
        <Border x:Name="ColorPickerPanel"
                Background="#D0000000" 
                CornerRadius="8" 
                Padding="15"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,20,0"
                Visibility="Collapsed">
            
            <StackPanel Orientation="Vertical" Width="200">
                <TextBlock Text="Color" 
                           Foreground="{DynamicResource AccentBrush}" 
                           FontWeight="Bold" 
                           FontSize="14"
                           Margin="0,0,0,10"/>
                
                <!-- Color Grid -->
                <UniformGrid Columns="6" Rows="3" Margin="0,0,0,15">
                    <Button Background="#FFFF0000" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FFFF0000"/>
                    <Button Background="#FFFF8000" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FFFF8000"/>
                    <Button Background="#FFFFFF00" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FFFFFF00"/>
                    <Button Background="#FF00FF00" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FF00FF00"/>
                    <Button Background="#FF0000FF" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FF0000FF"/>
                    <Button Background="#FF800080" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FF800080"/>
                    <Button Background="#FFFFC0CB" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FFFFC0CB"/>
                    <Button Background="#FF000000" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FF000000"/>
                    <Button Background="#FFFFFFFF" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FFFFFFFF"/>
                    <Button Background="#FF808080" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FF808080"/>
                    <Button Background="#FFFF8C00" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FFFF8C00"/>
                    <Button Background="#FF00FFFF" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FF00FFFF"/>
                    <Button Background="#FFFF69B4" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FFFF69B4"/>
                    <Button Background="#FF32CD32" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FF32CD32"/>
                    <Button Background="#FF4169E1" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FF4169E1"/>
                    <Button Background="#FF9932CC" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FF9932CC"/>
                    <Button Background="#FFDC143C" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FFDC143C"/>
                    <Button Background="#FFFFD700" Width="25" Height="25" Margin="2" Click="ColorButton_Click" Tag="#FFFFD700"/>
                </UniformGrid>

                <!-- Current Color Display -->
                <Border Background="{Binding ElementName=CurrentColorDisplay, Path=Background}" 
                        Width="50" Height="25" 
                        BorderBrush="{DynamicResource AccentBrush}" 
                        BorderThickness="2" 
                        CornerRadius="4"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,15">
                    <Rectangle x:Name="CurrentColorDisplay" Fill="{DynamicResource AccentBrush}"/>
                </Border>

                <!-- Stroke width slider -->
                <TextBlock Text="Stroke Width" 
                           Foreground="{DynamicResource AccentBrush}" 
                           FontWeight="Bold" 
                           FontSize="12"
                           Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="StrokeWidthSlider" 
                            Grid.Column="0"
                            Minimum="1" 
                            Maximum="10" 
                            Value="2" 
                            ValueChanged="StrokeWidthSlider_ValueChanged"/>
                    <TextBlock Grid.Column="1" 
                               x:Name="StrokeWidthValue"
                               Text="2px"
                               Foreground="{DynamicResource AccentBrush}"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               MinWidth="30"/>
                </Grid>

                <!-- Blur strength slider (only visible for blur tool) -->
                <StackPanel x:Name="BlurStrengthPanel" Visibility="Collapsed">
                    <TextBlock Text="Blur Strength" 
                               Foreground="{DynamicResource AccentBrush}" 
                               FontWeight="Bold" 
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="BlurStrengthSlider" 
                                Grid.Column="0"
                                Minimum="1" 
                                Maximum="20" 
                                Value="8" 
                                ValueChanged="BlurStrengthSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1" 
                                   x:Name="BlurStrengthValue"
                                   Text="8"
                                   Foreground="{DynamicResource AccentBrush}"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"
                                   MinWidth="35"/>
                    </Grid>
                </StackPanel>

                <!-- Highlighter opacity slider (only visible for highlighter tool) -->
                <StackPanel x:Name="HighlighterOpacityPanel" Visibility="Collapsed">
                    <TextBlock Text="Opacity" 
                               Foreground="{DynamicResource AccentBrush}" 
                               FontWeight="Bold" 
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="HighlighterOpacitySlider" 
                                Grid.Column="0"
                                Minimum="0.2" 
                                Maximum="0.8" 
                                Value="0.5" 
                                ValueChanged="HighlighterOpacitySlider_ValueChanged"/>
                        <TextBlock Grid.Column="1" 
                                   x:Name="HighlighterOpacityValue"
                                   Text="50%"
                                   Foreground="{DynamicResource AccentBrush}"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"
                                   MinWidth="35"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
