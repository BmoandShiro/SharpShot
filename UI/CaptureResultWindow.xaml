<Window x:Class="SharpShot.UI.CaptureResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screenshot Captured"
        Height="200" Width="400"
        Style="{StaticResource DarkWindowStyle}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Screenshot Captured!" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="{StaticResource AccentBrush}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Message -->
        <TextBlock Grid.Row="1" 
                   Text="What would you like to do with the screenshot?"
                   Foreground="{StaticResource TextBrush}" 
                   FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Button x:Name="SaveButton" 
                    Style="{StaticResource IconButtonStyle}"
                    Click="SaveButton_Click"
                    Margin="0,0,10,0"
                    Width="120"
                    Height="40"
                    ToolTip="Save File">
                <StackPanel Orientation="Horizontal">
                    <Path Data="M3 17.25V21h18v-3.75M6 9v6m0 0l4-4m-4 4l-4-4m8 4V9" 
                          Stroke="{DynamicResource AccentBrush}" 
                          StrokeThickness="2" 
                          Fill="Transparent"
                          Stretch="Uniform"
                          Width="16" Height="16"
                          Margin="0,0,8,0"/>
                    <TextBlock Text="Save" 
                               Foreground="{DynamicResource AccentBrush}" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="CopyButton" 
                    Style="{StaticResource IconButtonStyle}"
                    Click="CopyButton_Click"
                    Margin="10,0,0,0"
                    Width="120"
                    Height="40"
                    ToolTip="Copy to Clipboard">
                <StackPanel Orientation="Horizontal">
                    <Path Data="M8 4v12a2 2 0 002 2h8a2 2 0 002-2V7.242a2 2 0 00-.602-1.43L16.083 2.57A2 2 0 0014.685 2H10a2 2 0 00-2 2z" 
                          Stroke="{DynamicResource AccentBrush}" 
                          StrokeThickness="2" 
                          Fill="Transparent"
                          Stretch="Uniform"
                          Width="16" Height="16"
                          Margin="0,0,8,0"/>
                    <TextBlock Text="Copy" 
                               Foreground="{DynamicResource AccentBrush}" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window> 