<Window x:Class="SharpShot.UI.RegionSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Region Selection"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    
    <Canvas x:Name="SelectionCanvas" Background="#80000000">
        <Rectangle x:Name="SelectionRect" 
                   Stroke="{StaticResource AccentBrush}" 
                   StrokeThickness="2" 
                   Fill="#20FFFFFF"
                   Visibility="Collapsed"/>
        
        <!-- Instructions -->
        <TextBlock x:Name="InstructionsText"
                   Text="Click and drag to select a region, or press ESC to cancel"
                   Foreground="{StaticResource TextBrush}"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Canvas.Top="50"/>
    </Canvas>
</Window> 