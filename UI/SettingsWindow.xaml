<Window x:Class="SharpShot.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SharpShot Settings"
        Height="600" Width="500"
        Style="{StaticResource DarkWindowStyle}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
        <Window.Resources>
            <Style TargetType="ResizeGrip">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ResizeGrip">
                            <Grid>
                                <Canvas Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,1,1">
                                    <!-- Bottom-left square -->
                                    <Rectangle Canvas.Left="0" Canvas.Top="6" Width="4" Height="4" Fill="Transparent" Stroke="#FFFF8C00" StrokeThickness="1"/>
                                    <!-- Bottom-right square -->
                                    <Rectangle Canvas.Left="6" Canvas.Top="6" Width="4" Height="4" Fill="Transparent" Stroke="#FFFF8C00" StrokeThickness="1"/>
                                    <!-- Top-right square -->
                                    <Rectangle Canvas.Left="6" Canvas.Top="0" Width="4" Height="4" Fill="Transparent" Stroke="#FFFF8C00" StrokeThickness="1"/>
                                </Canvas>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Resize Handles -->
        <Border Grid.Row="0" 
                Height="8" 
                Background="Transparent" 
                Cursor="SizeNS" 
                MouseLeftButtonDown="TopResizeHandle_MouseLeftButtonDown"/>
        <Border Grid.Row="2" 
                Height="8" 
                Background="Transparent" 
                Cursor="SizeNS" 
                MouseLeftButtonDown="BottomResizeHandle_MouseLeftButtonDown"/>
        <Border Grid.Column="0" 
                Width="8" 
                Background="Transparent" 
                Cursor="SizeWE" 
                MouseLeftButtonDown="LeftResizeHandle_MouseLeftButtonDown"/>
        <Border Grid.Column="2" 
                Width="8" 
                Background="Transparent" 
                Cursor="SizeWE" 
                MouseLeftButtonDown="RightResizeHandle_MouseLeftButtonDown"/>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" 
                       Text="Settings" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       x:Name="SettingsHeader"
                       Foreground="#FFFF8C00"
                       MouseLeftButtonDown="Window_MouseLeftButtonDown"
                       Cursor="Hand"/>
            <Button Grid.Column="1" 
                    x:Name="CloseSettingsButton"
                    Content="âœ•"
                    Width="30" 
                    Height="30"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#FFFF8C00"
                    FontSize="16"
                    Click="CloseSettingsButton_Click"
                    Cursor="Hand"/>
        </Grid>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#FFFF8C00"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Width" Value="16"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ScrollBar">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Modern Top Button -->
                                    <RepeatButton Grid.Row="0" 
                                                 x:Name="PART_LineUpButton"
                                                 Command="ScrollBar.LineUpCommand"
                                                 Background="#FF1A1A1A"
                                                 BorderBrush="#FF404040"
                                                 BorderThickness="1"
                                                 Height="20"
                                                 Margin="2,0,2,1">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="3"
                                                        Margin="{TemplateBinding Margin}">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#FF2D2D2D"/>
                                                                    <Setter Property="BorderBrush" Value="#FFFF8C00"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Path Data="M0,6 L6,6 L3,0 Z" 
                                                          Fill="#FFFF8C00" 
                                                          Stretch="Uniform"
                                                          Width="6" 
                                                          Height="6"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                    
                                    <!-- Modern Track -->
                                    <Track Grid.Row="1" 
                                           x:Name="PART_Track"
                                           IsDirectionReversed="True">
                                        <Track.DecreaseRepeatButton>
                                            <RepeatButton Background="Transparent" 
                                                          BorderThickness="0"
                                                          Margin="2,1,2,1"
                                                          x:Name="PART_DecreaseRepeatButton"
                                                          Command="ScrollBar.PageUpCommand">
                                                <RepeatButton.Style>
                                                    <Style TargetType="RepeatButton">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background">
                                                                    <Setter.Value>
                                                                        <SolidColorBrush Color="#FFFF8C00" Opacity="0.125"/>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </RepeatButton.Style>
                                            </RepeatButton>
                                        </Track.DecreaseRepeatButton>
                                        <Track.IncreaseRepeatButton>
                                            <RepeatButton Background="Transparent" 
                                                          BorderThickness="0"
                                                          Margin="2,1,2,1"
                                                          x:Name="PART_IncreaseRepeatButton"
                                                          Command="ScrollBar.PageDownCommand">
                                                <RepeatButton.Style>
                                                    <Style TargetType="RepeatButton">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background">
                                                                    <Setter.Value>
                                                                        <SolidColorBrush Color="#FFFF8C00" Opacity="0.125"/>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </RepeatButton.Style>
                                            </RepeatButton>
                                        </Track.IncreaseRepeatButton>
                                        <Track.Thumb>
                                            <Thumb Background="#FF404040" 
                                                   BorderBrush="#FFFF8C00"
                                                   BorderThickness="1"
                                                   Margin="2,0,2,0"
                                                   MinHeight="20">
                                                <Thumb.Template>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Border Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="4"
                                                                Margin="{TemplateBinding Margin}">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#FF505050"/>
                                                                            <Setter Property="BorderBrush" Value="#FFFF8C00"/>
                                                                        </Trigger>

                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Thumb.Template>
                                            </Thumb>
                                        </Track.Thumb>
                                    </Track>
                                    
                                    <!-- Modern Bottom Button -->
                                    <RepeatButton Grid.Row="2" 
                                                 x:Name="PART_LineDownButton"
                                                 Command="ScrollBar.LineDownCommand"
                                                 Background="#FF1A1A1A"
                                                 BorderBrush="#FF404040"
                                                 BorderThickness="1"
                                                 Height="20"
                                                 Margin="2,1,2,0">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="3"
                                                        Margin="{TemplateBinding Margin}">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#FF2D2D2D"/>
                                                                    <Setter Property="BorderBrush" Value="#FFFF8C00"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Path Data="M0,0 L6,0 L3,6 Z" 
                                                          Fill="#FFFF8C00" 
                                                          Stretch="Uniform"
                                                          Width="6" 
                                                          Height="6"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ScrollViewer.Resources>
            <StackPanel Margin="0,0,15,0">
                <!-- Save Path -->
                <TextBlock Text="Save Path:" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SavePathTextBox" 
                             Grid.Column="0"
                             Style="{StaticResource DarkTextBoxStyle}"/>
                    <Button x:Name="BrowseButton"
                            Grid.Column="1" 
                            Style="{StaticResource ModernButtonStyle}"
                            Margin="8,0,0,0"
                            Click="BrowseButton_Click"
                            Width="80"
                            Height="32">
                        <TextBlock Text="Browse" 
                                   Foreground="#FFFF8C00" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>
                </Grid>

                <!-- Screenshot Format -->
                <TextBlock Text="Screenshot Format:" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="FormatComboBox" 
                          Style="{StaticResource DarkComboBoxStyle}"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="PNG"/>
                    <ComboBoxItem Content="JPG"/>
                    <ComboBoxItem Content="BMP"/>
                </ComboBox>

                <!-- Video Quality -->
                <TextBlock Text="Video Quality:" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="QualityComboBox" 
                          Style="{StaticResource DarkComboBoxStyle}"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="High"/>
                    <ComboBoxItem Content="Medium"/>
                    <ComboBoxItem Content="Low"/>
                </ComboBox>

                <!-- Checkboxes -->
                <CheckBox x:Name="AudioRecordingCheckBox" 
                          Content="Enable Audio Recording" 
                          Style="{StaticResource DarkCheckBoxStyle}"
                          Margin="0,0,0,10"/>
                <CheckBox x:Name="GlobalHotkeysCheckBox" 
                          Content="Enable Global Hotkeys" 
                          Style="{StaticResource DarkCheckBoxStyle}"
                          Margin="0,0,0,10"/>
                <CheckBox x:Name="StartMinimizedCheckBox" 
                          Content="Start Minimized" 
                          Style="{StaticResource DarkCheckBoxStyle}"
                          Margin="0,0,0,20"/>

                <!-- Theme Customization Section -->
                <TextBlock Text="Theme Customization:" 
                           x:Name="ThemeCustomizationHeader"
                           Foreground="#FFFF8C00" 
                           FontWeight="SemiBold" 
                           FontSize="16"
                           Margin="0,0,0,10"/>
                
                <!-- Icon Color -->
                <TextBlock Text="Icon Color (Hex):" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="IconColorTextBox" 
                         Style="{StaticResource DarkTextBoxStyle}"
                         Text="#FFFF8C00"
                         Margin="0,0,0,15"/>
                
                <!-- Hover Opacity -->
                <TextBlock Text="Hover Highlight Opacity:" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="HoverOpacitySlider" 
                            Grid.Column="0"
                            Minimum="0" 
                            Maximum="1" 
                            Value="0.125"
                            TickFrequency="0.1"
                            IsSnapToTickEnabled="True"
                            VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" 
                               x:Name="HoverOpacityValue"
                               Text="12.5%"
                               Foreground="{StaticResource TextBrush}"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               MinWidth="40"/>
                </Grid>
                
                <!-- Drop Shadow Opacity -->
                <TextBlock Text="Drop Shadow Opacity:" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="DropShadowOpacitySlider" 
                            Grid.Column="0"
                            Minimum="0" 
                            Maximum="1" 
                            Value="0.15"
                            TickFrequency="0.1"
                            IsSnapToTickEnabled="True"
                            VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" 
                               x:Name="DropShadowOpacityValue"
                               Text="15%"
                               Foreground="{StaticResource TextBrush}"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               MinWidth="40"/>
                </Grid>

                <!-- Hotkeys Section -->
                <TextBlock Text="Hotkeys:" 
                           x:Name="HotkeysHeader"
                           Foreground="#FFFF8C00" 
                           FontWeight="SemiBold" 
                           FontSize="16"
                           Margin="0,0,0,10"/>
                
                <!-- Region Capture Hotkey -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Region Capture:" 
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             x:Name="RegionHotkeyTextBox"
                             Style="{StaticResource DarkTextBoxStyle}"
                             Width="120"
                             Text="Double Ctrl"
                             IsReadOnly="True"
                             PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                             GotFocus="HotkeyTextBox_GotFocus"
                             LostFocus="HotkeyTextBox_LostFocus"
                             IsEnabled="True"/>
                    <CheckBox Grid.Column="2"
                              x:Name="RegionTripleClickCheckBox"
                              Content="Triple Click"
                              Style="{StaticResource DarkCheckBoxStyle}"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Full Screen Hotkey -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Full Screen:" 
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             x:Name="FullScreenHotkeyTextBox"
                             Style="{StaticResource DarkTextBoxStyle}"
                             Width="120"
                             Text="Ctrl+Shift+S"
                             IsReadOnly="True"
                             PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                             GotFocus="HotkeyTextBox_GotFocus"
                             LostFocus="HotkeyTextBox_LostFocus"/>
                    <CheckBox Grid.Column="2"
                              x:Name="FullScreenTripleClickCheckBox"
                              Content="Triple Click"
                              Style="{StaticResource DarkCheckBoxStyle}"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Recording Hotkey -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Toggle Recording:" 
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             x:Name="RecordingHotkeyTextBox"
                             Style="{StaticResource DarkTextBoxStyle}"
                             Width="120"
                             Text="Ctrl+Shift+R"
                             IsReadOnly="True"
                             PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                             GotFocus="HotkeyTextBox_GotFocus"
                             LostFocus="HotkeyTextBox_LostFocus"/>
                    <CheckBox Grid.Column="2"
                              x:Name="RecordingTripleClickCheckBox"
                              Content="Triple Click"
                              Style="{StaticResource DarkCheckBoxStyle}"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Cancel Hotkey -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Cancel:" 
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             x:Name="CancelHotkeyTextBox"
                             Style="{StaticResource DarkTextBoxStyle}"
                             Width="120"
                             Text="Escape"
                             IsReadOnly="True"
                             PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                             GotFocus="HotkeyTextBox_GotFocus"
                             LostFocus="HotkeyTextBox_LostFocus"/>
                    <CheckBox Grid.Column="2"
                              x:Name="CancelTripleClickCheckBox"
                              Content="Triple Click"
                              Style="{StaticResource DarkCheckBoxStyle}"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Save Hotkey -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Save:" 
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             x:Name="SaveHotkeyTextBox"
                             Style="{StaticResource DarkTextBoxStyle}"
                             Width="120"
                             Text="Space"
                             IsReadOnly="True"
                             PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                             GotFocus="HotkeyTextBox_GotFocus"
                             LostFocus="HotkeyTextBox_LostFocus"/>
                    <CheckBox Grid.Column="2"
                              x:Name="SaveTripleClickCheckBox"
                              Content="Triple Click"
                              Style="{StaticResource DarkCheckBoxStyle}"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Copy Hotkey -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Copy:" 
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             x:Name="CopyHotkeyTextBox"
                             Style="{StaticResource DarkTextBoxStyle}"
                             Width="120"
                             Text="Enter"
                             IsReadOnly="True"
                             PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                             GotFocus="HotkeyTextBox_GotFocus"
                             LostFocus="HotkeyTextBox_LostFocus"/>
                    <CheckBox Grid.Column="2"
                              x:Name="CopyTripleClickCheckBox"
                              Content="Triple Click"
                              Style="{StaticResource DarkCheckBoxStyle}"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button x:Name="CancelButton" 
                    Style="{StaticResource ModernButtonStyle}"
                    Click="CancelButton_Click"
                    Margin="0,0,12,0"
                    Width="100"
                    Height="36">
                <TextBlock Text="Cancel" 
                           Foreground="#FFFF8C00" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Button>
            <Button x:Name="SaveButton" 
                    Style="{StaticResource ModernButtonStyle}"
                    Click="SaveButton_Click"
                    Width="100"
                    Height="36">
                <TextBlock Text="Save" 
                           Foreground="#FFFF8C00" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Button>
        </StackPanel>
    </Grid>
</Window> 