<Window x:Class="SharpShot.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SharpShot.UI"
        Title="SharpShot Settings"
        Height="700" Width="500"
        Style="{StaticResource DarkWindowStyle}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
        <Window.Resources>
            <SolidColorBrush x:Key="ResizeGripBrush" Color="#FFFF8C00"/>
            <SolidColorBrush x:Key="ScrollBarBrush" Color="#FFFF8C00"/>
            <SolidColorBrush x:Key="ScrollBarTrackHoverBrush" Color="#40FF8C00"/>
            <SolidColorBrush x:Key="ScrollBarButtonHoverBrush" Color="#15FF8C00"/>
            <Style TargetType="ResizeGrip">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ResizeGrip">
                            <Grid>
                                <Canvas Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,1,1">
                                    <!-- Bottom-left square -->
                                    <Rectangle Canvas.Left="0" Canvas.Top="6" Width="4" Height="4" Fill="Transparent" Stroke="{StaticResource ResizeGripBrush}" StrokeThickness="1"/>
                                    <!-- Bottom-right square -->
                                    <Rectangle Canvas.Left="6" Canvas.Top="6" Width="4" Height="4" Fill="Transparent" Stroke="{StaticResource ResizeGripBrush}" StrokeThickness="1"/>
                                    <!-- Top-right square -->
                                    <Rectangle Canvas.Left="6" Canvas.Top="0" Width="4" Height="4" Fill="Transparent" Stroke="{StaticResource ResizeGripBrush}" StrokeThickness="1"/>
                                </Canvas>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Resize Handles -->
        <Border Grid.Row="0" 
                Height="8" 
                Background="Transparent" 
                Cursor="SizeNS" 
                MouseLeftButtonDown="TopResizeHandle_MouseLeftButtonDown"/>
        <Border Grid.Row="2" 
                Height="8" 
                Background="Transparent" 
                Cursor="SizeNS" 
                MouseLeftButtonDown="BottomResizeHandle_MouseLeftButtonDown"/>
        <Border Grid.Column="0" 
                Width="8" 
                Background="Transparent" 
                Cursor="SizeWE" 
                MouseLeftButtonDown="LeftResizeHandle_MouseLeftButtonDown"/>
        <Border Grid.Column="2" 
                Width="8" 
                Background="Transparent" 
                Cursor="SizeWE" 
                MouseLeftButtonDown="RightResizeHandle_MouseLeftButtonDown"/>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" 
                       Text="Settings" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       x:Name="SettingsHeader"
                       Foreground="#FFFF8C00"
                       MouseLeftButtonDown="Window_MouseLeftButtonDown"
                       Cursor="Hand"/>
            <Button Grid.Column="1" 
                    x:Name="CloseSettingsButton"
                    Content="âœ•"
                    Width="30" 
                    Height="30"
                    FontSize="16"
                    Click="CloseSettingsButton_Click"
                    Cursor="Hand"/>
        </Grid>

        <!-- Settings Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{StaticResource ScrollBarBrush}"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Width" Value="16"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ScrollBar">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Custom Top Button -->
                                        <RepeatButton Grid.Row="0" 
                                                     x:Name="PART_LineUpButton"
                                                     Command="ScrollBar.LineUpCommand"
                                                     Background="#FF1A1A1A"
                                                     BorderBrush="#FF404040"
                                                     BorderThickness="1"
                                                     Height="20"
                                                     Margin="2,0,2,1">
                                            <RepeatButton.Template>
                                                <ControlTemplate TargetType="RepeatButton">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="3"
                                                            Margin="{TemplateBinding Margin}">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="{StaticResource ScrollBarButtonHoverBrush}"/>
                                                                        <Setter Property="BorderBrush" Value="{StaticResource ScrollBarBrush}"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Path Data="M0,6 L6,6 L3,0 Z" 
                                                              Fill="{StaticResource ScrollBarBrush}" 
                                                              Stretch="Uniform"
                                                              Width="6" 
                                                              Height="6"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </RepeatButton.Template>
                                        </RepeatButton>
                                        
                                        <!-- Custom Track -->
                                        <Border Grid.Row="1" Background="#FF1A1A1A">
                                            <Track x:Name="PART_Track"
                                                   IsDirectionReversed="True">
                                                <Track.DecreaseRepeatButton>
                                                    <RepeatButton Background="Transparent" 
                                                                  BorderThickness="0"
                                                                  Margin="2,1,2,1"
                                                                  x:Name="PART_DecreaseRepeatButton"
                                                                  Command="ScrollBar.PageUpCommand">
                                                        <RepeatButton.Template>
                                                            <ControlTemplate TargetType="RepeatButton">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        Margin="{TemplateBinding Margin}">
                                                                    <Border.Style>
                                                                        <Style TargetType="Border">
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter Property="Background" Value="{StaticResource ScrollBarTrackHoverBrush}"/>
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Border.Style>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </RepeatButton.Template>
                                                    </RepeatButton>
                                                </Track.DecreaseRepeatButton>
                                                <Track.IncreaseRepeatButton>
                                                    <RepeatButton Background="Transparent" 
                                                                  BorderThickness="0"
                                                                  Margin="2,1,2,1"
                                                                  x:Name="PART_IncreaseRepeatButton"
                                                                  Command="ScrollBar.PageDownCommand">
                                                        <RepeatButton.Template>
                                                            <ControlTemplate TargetType="RepeatButton">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        Margin="{TemplateBinding Margin}">
                                                                    <Border.Style>
                                                                        <Style TargetType="Border">
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter Property="Background" Value="{StaticResource ScrollBarTrackHoverBrush}"/>
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Border.Style>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </RepeatButton.Template>
                                                    </RepeatButton>
                                                </Track.IncreaseRepeatButton>
                                                <Track.Thumb>
                                                    <Thumb Background="#FF404040" 
                                                           BorderBrush="{StaticResource ScrollBarBrush}"
                                                           BorderThickness="1"
                                                           Margin="2,0,2,0"
                                                           MinHeight="20">
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="4"
                                                                        Margin="{TemplateBinding Margin}">
                                                                    <Border.Style>
                                                                        <Style TargetType="Border">
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter Property="Background" Value="#FF505050"/>
                                                                                    <Setter Property="BorderBrush" Value="{StaticResource ScrollBarBrush}"/>
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Border.Style>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Border>
                                        
                                        <!-- Custom Bottom Button -->
                                        <RepeatButton Grid.Row="2" 
                                                     x:Name="PART_LineDownButton"
                                                     Command="ScrollBar.LineDownCommand"
                                                     Background="#FF1A1A1A"
                                                     BorderBrush="#FF404040"
                                                     BorderThickness="1"
                                                     Height="20"
                                                     Margin="2,1,2,0">
                                            <RepeatButton.Template>
                                                <ControlTemplate TargetType="RepeatButton">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="3"
                                                            Margin="{TemplateBinding Margin}">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="{StaticResource ScrollBarButtonHoverBrush}"/>
                                                                        <Setter Property="BorderBrush" Value="{StaticResource ScrollBarBrush}"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Path Data="M0,0 L6,0 L3,6 Z" 
                                                              Fill="{StaticResource ScrollBarBrush}" 
                                                              Stretch="Uniform"
                                                              Width="6" 
                                                              Height="6"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </RepeatButton.Template>
                                        </RepeatButton>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ScrollViewer.Resources>
            <StackPanel Margin="0,0,15,0">
                <!-- Save Path -->
                <TextBlock Text="Save Path:" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SavePathTextBox" 
                             Grid.Column="0"
                             Style="{StaticResource DarkTextBoxStyle}"/>
                    <Button x:Name="BrowseButton"
                            Grid.Column="1" 
                            Style="{StaticResource ModernButtonStyle}"
                            Margin="8,0,0,0"
                            Click="BrowseButton_Click"
                            Width="80"
                            Height="32">
                        <TextBlock Text="Browse" 
                                   Foreground="#FFFF8C00" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>
                </Grid>

                <!-- Screenshot Format -->
                <TextBlock Text="Screenshot Format:" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="FormatComboBox" 
                          Style="{StaticResource DarkComboBoxStyle}"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="PNG"/>
                    <ComboBoxItem Content="JPG"/>
                    <ComboBoxItem Content="BMP"/>
                </ComboBox>

                <!-- Video Quality -->
                <TextBlock Text="Video Quality:" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="QualityComboBox" 
                          Style="{StaticResource DarkComboBoxStyle}"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="High"/>
                    <ComboBoxItem Content="Medium"/>
                    <ComboBoxItem Content="Low"/>
                </ComboBox>

                <!-- Screen Selection for Full-Screen Capture -->
                <TextBlock Text="Full-Screen Capture Target:" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="ScreenComboBox" 
                          Style="{StaticResource DarkComboBoxStyle}"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="All Screens"/>
                    <ComboBoxItem Content="Primary Monitor"/>
                    <ComboBoxItem Content="Monitor 1"/>
                    <ComboBoxItem Content="Monitor 2"/>
                    <ComboBoxItem Content="Monitor 3"/>
                    <ComboBoxItem Content="Monitor 4"/>
                </ComboBox>

                <!-- Screenshot Editor Display Monitor -->
                <TextBlock Text="Screenshot Editor Display Monitor:" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="EditorDisplayMonitorComboBox" 
                          Style="{StaticResource DarkComboBoxStyle}"
                          Margin="0,0,0,15"
                          ToolTip="Choose which monitor displays the screenshot editor toolbar and preview when editing screenshots">
                    <ComboBoxItem Content="Primary Monitor"/>
                    <ComboBoxItem Content="Monitor 1"/>
                    <ComboBoxItem Content="Monitor 2"/>
                    <ComboBoxItem Content="Monitor 3"/>
                    <ComboBoxItem Content="Monitor 4"/>
                </ComboBox>

                <!-- Recording Engine -->
                <TextBlock Text="Recording Engine:" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="RecordingEngineComboBox" 
                          Style="{StaticResource DarkComboBoxStyle}"
                          Margin="0,0,0,10"
                          SelectionChanged="RecordingEngineComboBox_SelectionChanged">
                    <ComboBoxItem Content="FFmpeg"/>
                    <ComboBoxItem Content="OBS"/>
                </ComboBox>

                <!-- Audio Recording Mode -->
                <!-- Commented out - Audio recording disabled for now
                <TextBlock Text="Audio Recording Mode:" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="AudioRecordingModeComboBox" 
                          Style="{StaticResource DarkComboBoxStyle}"
                          Margin="0,0,0,10"
                          SelectionChanged="AudioRecordingModeComboBox_SelectionChanged">
                    <ComboBoxItem Content="No Audio"/>
                    <ComboBoxItem Content="System Audio Only"/>
                    <ComboBoxItem Content="Microphone Only"/>
                    <ComboBoxItem Content="System Audio + Microphone"/>
                </ComboBox>
                -->

                <!-- Output Audio Device Selection -->
                <StackPanel x:Name="OutputAudioDevicePanel" 
                           Margin="0,0,0,10" 
                           Visibility="Collapsed">
                    <TextBlock Text="Output Audio Device (System Audio):" 
                               Foreground="{StaticResource TextBrush}" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    <ComboBox x:Name="OutputAudioDeviceComboBox" 
                              Style="{StaticResource DarkComboBoxStyle}"
                              Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Input Audio Device Selection -->
                <StackPanel x:Name="InputAudioDevicePanel" 
                           Margin="0,0,0,10" 
                           Visibility="Collapsed">
                    <TextBlock Text="Input Audio Device (Microphone):" 
                               Foreground="{StaticResource TextBrush}" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    <ComboBox x:Name="InputAudioDeviceComboBox" 
                              Style="{StaticResource DarkComboBoxStyle}"
                              Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Refresh Audio Devices Button -->
                <!-- Commented out - Audio recording disabled for now
                <Button x:Name="RefreshAudioDevicesButton"
                        Style="{StaticResource ModernButtonStyle}"
                        Margin="0,0,0,15"
                        Click="RefreshAudioDevicesButton_Click"
                        Width="150"
                        Height="32">
                    <TextBlock Text="Refresh Audio Devices" 
                               Foreground="#FFFF8C00" 
                               FontSize="12" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Button>
                -->
                <CheckBox x:Name="GlobalHotkeysCheckBox" 
                          Content="Enable Global Hotkeys" 
                          Style="{StaticResource DarkCheckBoxStyle}"
                          Margin="0,0,0,10"/>
                <CheckBox x:Name="StartMinimizedCheckBox" 
                          Content="Start Minimized" 
                          Style="{StaticResource DarkCheckBoxStyle}"
                          Margin="0,0,0,10"/>
                <CheckBox x:Name="AutoCopyScreenshotsCheckBox" 
                          Content="Auto-copy screenshots to clipboard" 
                          Style="{StaticResource DarkCheckBoxStyle}"
                          Margin="0,0,0,10"/>
                <CheckBox x:Name="EnableMagnifierCheckBox"
                          Content="Enable magnifier during region selection"
                          Style="{StaticResource DarkCheckBoxStyle}"
                          Margin="0,0,0,10"/>
                <CheckBox x:Name="DisableAllPopupsCheckBox"
                          Content="Disable all popup notifications"
                          Style="{StaticResource DarkCheckBoxStyle}"
                          Margin="0,0,0,10"
                          ToolTip="When enabled, all popup dialogs (success messages, file saved confirmations, etc.) will be suppressed"/>
               
               <!-- Magnifier Zoom Level -->
               <StackPanel x:Name="MagnifierZoomPanel"
                          Margin="0,0,0,20"
                          Visibility="Collapsed">
                   <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                       <TextBlock Text="Magnifier Zoom Level:"
                                  Foreground="White"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                       <ComboBox x:Name="MagnifierZoomComboBox"
                                 Width="80"
                                 Style="{StaticResource DarkComboBoxStyle}">
                           <ComboBoxItem Content="0.5x"/>
                           <ComboBoxItem Content="1.0x"/>
                           <ComboBoxItem Content="1.5x"/>
                           <ComboBoxItem Content="2.0x"/>
                           <ComboBoxItem Content="2.5x"/>
                           <ComboBoxItem Content="3.0x"/>
                           <ComboBoxItem Content="3.5x"/>
                       <ComboBoxItem Content="4.0x"/>
                       <ComboBoxItem Content="4.5x"/>
                       <ComboBoxItem Content="5.0x"/>
                       <ComboBoxItem Content="5.5x"/>
                       <ComboBoxItem Content="6.0x"/>
                       <ComboBoxItem Content="6.5x"/>
                       <ComboBoxItem Content="7.0x"/>
                       <ComboBoxItem Content="7.5x"/>
                       <ComboBoxItem Content="8.0x"/>
                       <ComboBoxItem Content="8.5x"/>
                       <ComboBoxItem Content="9.0x"/>
                       <ComboBoxItem Content="9.5x"/>
                       <ComboBoxItem Content="10.0x"/>
                   </ComboBox>
                   </StackPanel>
                   
                   <!-- Magnifier Size (Stationary Mode) -->
                   <StackPanel x:Name="MagnifierSizeStationaryPanel"
                              Orientation="Horizontal" 
                              Margin="0,0,0,10"
                              Visibility="Collapsed">
                       <TextBlock Text="Magnifier Size (Stationary):"
                                  Foreground="White"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"
                                  Width="180"/>
                       <Slider x:Name="MagnifierSizeSlider"
                               Minimum="100"
                               Maximum="400"
                               TickFrequency="50"
                               IsSnapToTickEnabled="True"
                               Width="200"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                       <TextBlock x:Name="MagnifierSizeText"
                                  Text="200px"
                                  Foreground="White"
                                  VerticalAlignment="Center"
                                  Width="60"/>
                   </StackPanel>
                   
                   <!-- Magnifier Size (Follow Cursor/Auto Mode) -->
                   <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                       <TextBlock Text="Magnifier Size (Follow/Auto):"
                                  Foreground="White"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"
                                  Width="180"/>
                       <Slider x:Name="MagnifierFollowSizeSlider"
                               Minimum="100"
                               Maximum="200"
                               TickFrequency="25"
                               IsSnapToTickEnabled="True"
                               Width="200"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                       <TextBlock x:Name="MagnifierFollowSizeText"
                                  Text="200px"
                                  Foreground="White"
                                  VerticalAlignment="Center"
                                  Width="60"/>
                   </StackPanel>
               </StackPanel>
               
               <!-- Magnifier Mode -->
               <StackPanel x:Name="MagnifierModePanel"
                          Margin="0,0,0,20"
                          Visibility="Collapsed">
                   <TextBlock Text="Magnifier Mode:"
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="0,0,0,5"/>
                   <ComboBox x:Name="MagnifierModeComboBox"
                             Width="200"
                             Style="{StaticResource DarkComboBoxStyle}"
                             SelectionChanged="MagnifierModeComboBox_SelectionChanged">
                       <ComboBoxItem Content="Follow Cursor" Tag="Follow"/>
                       <ComboBoxItem Content="Stationary" Tag="Stationary"/>
                       <ComboBoxItem Content="Auto (Stationary on non-100% monitors)" Tag="Auto"/>
                   </ComboBox>
               </StackPanel>
               
               <!-- Stationary Magnifier Settings -->
               <StackPanel x:Name="MagnifierStationaryPanel"
                          Margin="0,0,0,20"
                          Visibility="Collapsed">
                   <TextBlock Text="Stationary Magnifier Settings:"
                              Foreground="White"
                              FontWeight="SemiBold"
                              Margin="0,0,0,10"/>
                   
                   <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                       <TextBlock Text="Monitor:"
                                  Foreground="White"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"
                                  Width="80"/>
                       <ComboBox x:Name="MagnifierStationaryMonitorComboBox"
                                 Width="200"
                                 Style="{StaticResource DarkComboBoxStyle}"/>
                   </StackPanel>
                   
                   <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                       <TextBlock Text="Position X (%):"
                                  Foreground="White"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"
                                  Width="100"/>
                       <Slider x:Name="MagnifierStationaryXSlider"
                               Minimum="0"
                               Maximum="100"
                               Value="50"
                               Width="200"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                       <TextBlock x:Name="MagnifierStationaryXText"
                                  Text="50"
                                  Foreground="White"
                                  VerticalAlignment="Center"
                                  Width="40"/>
                   </StackPanel>
                   
                   <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                       <TextBlock Text="Position Y (%):"
                                  Foreground="White"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"
                                  Width="100"/>
                       <Slider x:Name="MagnifierStationaryYSlider"
                               Minimum="0"
                               Maximum="100"
                               Value="50"
                               Width="200"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                       <TextBlock x:Name="MagnifierStationaryYText"
                                  Text="50"
                                  Foreground="White"
                                  VerticalAlignment="Center"
                                  Width="40"/>
                   </StackPanel>
                   
                   <TextBlock Text="Position is relative to the selected monitor (0% = top/left, 100% = bottom/right)"
                              Foreground="#FF888888"
                              FontSize="11"
                              TextWrapping="Wrap"
                              Margin="0,5,0,0"/>
               </StackPanel>
               
               <!-- Auto Mode Monitor Selection -->
               <StackPanel x:Name="MagnifierAutoModePanel"
                          Margin="0,0,0,20"
                          Visibility="Collapsed">
                   <TextBlock Text="Select monitors that should use stationary mode:"
                              Foreground="White"
                              FontWeight="SemiBold"
                              Margin="0,0,0,10"/>
                   
                   <ScrollViewer MaxHeight="200"
                                VerticalScrollBarVisibility="Auto"
                                Margin="0,0,0,10">
                       <StackPanel x:Name="MagnifierAutoMonitorList">
                           <!-- Checkboxes will be populated dynamically -->
                       </StackPanel>
                   </ScrollViewer>
                   
                   <TextBlock Text="Checked monitors will automatically switch to stationary mode when your cursor enters them. Unchecked monitors will use follow cursor mode."
                              Foreground="#FF888888"
                              FontSize="11"
                              TextWrapping="Wrap"
                              Margin="0,5,0,10"/>
                   
                   <TextBlock Text="Boundary Boxes (for DPI-scaled monitors):"
                              Foreground="White"
                              FontWeight="SemiBold"
                              Margin="0,10,0,10"/>
                   
                   <TextBlock Text="If monitor detection doesn't work correctly (especially on 225% zoom monitors), you can draw custom boundary boxes. Checked boxes will trigger stationary mode when your cursor enters them. You can have multiple boxes per monitor."
                              Foreground="#FF888888"
                              FontSize="11"
                              TextWrapping="Wrap"
                              Margin="0,0,0,10"/>
                   
                   <Button x:Name="AddBoundaryBoxButton"
                          Style="{StaticResource ModernButtonStyle}"
                          Click="AddBoundaryBoxButton_Click"
                          Width="150"
                          Height="32"
                          Margin="0,0,0,10"
                          HorizontalAlignment="Left">
                        <TextBlock Text="Add Boundary Box" 
                                   Foreground="#FFFF8C00" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>
                   
                   <ScrollViewer MaxHeight="200"
                                VerticalScrollBarVisibility="Auto"
                                Margin="0,0,0,10">
                       <StackPanel x:Name="MagnifierBoundaryBoxList">
                           <!-- Boundary boxes will be populated dynamically -->
                       </StackPanel>
                   </ScrollViewer>
               </StackPanel>

                <!-- Theme Customization Section -->
                <TextBlock Text="Theme Customization:" 
                           x:Name="ThemeCustomizationHeader"
                           Foreground="#FFFF8C00" 
                           FontWeight="SemiBold" 
                           FontSize="16"
                           Margin="0,0,0,10"/>
                
                <!-- Icon Color -->
                <TextBlock Text="Icon Color:" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                
                <!-- RGB Color Picker -->
                <Border Background="#FF1A1A1A" 
                        BorderBrush="#FF404040" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Use the RGB sliders to select a color" 
                                   Foreground="{StaticResource TextBrush}" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,10"/>
                        <local:ColorWheelControl x:Name="IconColorWheel" 
                                                HorizontalAlignment="Center"/>
                        <TextBox x:Name="IconColorTextBox" 
                                 Style="{StaticResource DarkTextBoxStyle}"
                                 Text="#FFFF8C00"
                                 Margin="0,10,0,0"
                                 TextChanged="IconColorTextBox_TextChanged"/>
                    </StackPanel>
                </Border>
                
                <!-- Hover Opacity -->
                <TextBlock Text="Hover Highlight Opacity:" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="HoverOpacitySlider" 
                            Grid.Column="0"
                            Minimum="0" 
                            Maximum="1" 
                            Value="0.125"
                            TickFrequency="0.01"
                            IsSnapToTickEnabled="True"
                            VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" 
                               x:Name="HoverOpacityValue"
                               Text="12.5%"
                               Foreground="{StaticResource TextBrush}"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               MinWidth="40"/>
                </Grid>
                
                <!-- Drop Shadow Opacity -->
                <TextBlock Text="Drop Shadow Opacity:" 
                           Foreground="{StaticResource TextBrush}" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="DropShadowOpacitySlider" 
                            Grid.Column="0"
                            Minimum="0" 
                            Maximum="1" 
                            Value="0.15"
                            TickFrequency="0.01"
                            IsSnapToTickEnabled="True"
                            VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" 
                               x:Name="DropShadowOpacityValue"
                               Text="15%"
                               Foreground="{StaticResource TextBrush}"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               MinWidth="40"/>
                </Grid>

                <!-- Hotkeys Section -->
                <TextBlock Text="Hotkeys:" 
                           x:Name="HotkeysHeader"
                           Foreground="#FFFF8C00" 
                           FontWeight="SemiBold" 
                           FontSize="16"
                           Margin="0,0,0,10"/>
                
                <!-- Hotkey Instructions -->
                <TextBlock Text="Click on a hotkey field and press your desired key combination. Single modifier keys (Ctrl, Shift, Alt) will automatically enable triple-click mode."
                           Foreground="{StaticResource TextBrush}" 
                           FontSize="11" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>
                
                <!-- Screenshot Region Select Hotkey -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Screenshot Region Select:" 
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             x:Name="ScreenshotRegionHotkeyTextBox"
                             Style="{StaticResource DarkTextBoxStyle}"
                             Width="120"
                             Text=""
                             IsReadOnly="True"
                             PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                             GotFocus="HotkeyTextBox_GotFocus"
                             LostFocus="HotkeyTextBox_LostFocus"
                             IsEnabled="True"/>
                    <CheckBox Grid.Column="2"
                              x:Name="ScreenshotRegionTripleClickCheckBox"
                              Content="Triple Click"
                              Style="{StaticResource DarkCheckBoxStyle}"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Screenshot Fullscreen Hotkey -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Screenshot Fullscreen:" 
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             x:Name="ScreenshotFullscreenHotkeyTextBox"
                             Style="{StaticResource DarkTextBoxStyle}"
                             Width="120"
                             Text=""
                             IsReadOnly="True"
                             PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                             GotFocus="HotkeyTextBox_GotFocus"
                             LostFocus="HotkeyTextBox_LostFocus"/>
                    <CheckBox Grid.Column="2"
                              x:Name="ScreenshotFullscreenTripleClickCheckBox"
                              Content="Triple Click"
                              Style="{StaticResource DarkCheckBoxStyle}"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Record Region Select Hotkey -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Record Region Select:" 
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             x:Name="RecordRegionHotkeyTextBox"
                             Style="{StaticResource DarkTextBoxStyle}"
                             Width="120"
                             Text=""
                             IsReadOnly="True"
                             PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                             GotFocus="HotkeyTextBox_GotFocus"
                             LostFocus="HotkeyTextBox_LostFocus"/>
                    <CheckBox Grid.Column="2"
                              x:Name="RecordRegionTripleClickCheckBox"
                              Content="Triple Click"
                              Style="{StaticResource DarkCheckBoxStyle}"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Record Fullscreen Hotkey -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Record Fullscreen:" 
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             x:Name="RecordFullscreenHotkeyTextBox"
                             Style="{StaticResource DarkTextBoxStyle}"
                             Width="120"
                             Text=""
                             IsReadOnly="True"
                             PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                             GotFocus="HotkeyTextBox_GotFocus"
                             LostFocus="HotkeyTextBox_LostFocus"/>
                    <CheckBox Grid.Column="2"
                              x:Name="RecordFullscreenTripleClickCheckBox"
                              Content="Triple Click"
                              Style="{StaticResource DarkCheckBoxStyle}"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Copy Hotkey -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Copy:" 
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             x:Name="CopyHotkeyTextBox"
                             Style="{StaticResource DarkTextBoxStyle}"
                             Width="120"
                             Text=""
                             IsReadOnly="True"
                             PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                             GotFocus="HotkeyTextBox_GotFocus"
                             LostFocus="HotkeyTextBox_LostFocus"/>
                    <CheckBox Grid.Column="2"
                              x:Name="CopyTripleClickCheckBox"
                              Content="Triple Click"
                              Style="{StaticResource DarkCheckBoxStyle}"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Save Hotkey -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Save:" 
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" 
                             x:Name="SaveHotkeyTextBox"
                             Style="{StaticResource DarkTextBoxStyle}"
                             Width="120"
                             Text=""
                             IsReadOnly="True"
                             PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                             GotFocus="HotkeyTextBox_GotFocus"
                             LostFocus="HotkeyTextBox_LostFocus"/>
                    <CheckBox Grid.Column="2"
                              x:Name="SaveTripleClickCheckBox"
                              Content="Triple Click"
                              Style="{StaticResource DarkCheckBoxStyle}"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button x:Name="CancelButton" 
                    Style="{StaticResource ModernButtonStyle}"
                    Click="CancelButton_Click"
                    Margin="0,0,12,0"
                    Width="100"
                    Height="36">
                <TextBlock Text="Cancel" 
                           Foreground="#FFFF8C00" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Button>
            <Button x:Name="SaveButton" 
                    Style="{StaticResource ModernButtonStyle}"
                    Click="SaveButton_Click"
                    Width="100"
                    Height="36">
                <TextBlock Text="Save" 
                           Foreground="#FFFF8C00" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Button>
        </StackPanel>
    </Grid>
</Window> 