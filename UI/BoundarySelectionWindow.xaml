<Window x:Class="SharpShot.UI.BoundarySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Draw Boundary"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowActivated="False"
        Topmost="True"
        ResizeMode="NoResize">
    <Canvas x:Name="SelectionCanvas" Background="#40000000">
        <Rectangle x:Name="SelectionRect"
                   Stroke="Red"
                   StrokeThickness="2"
                   Fill="#20FF0000"
                   Visibility="Collapsed"/>
        <TextBlock x:Name="InstructionsText"
                   Text="Drag to draw boundary box anywhere on screen. Press ESC to cancel."
                   Foreground="White"
                   FontSize="16"
                   Canvas.Left="20"
                   Canvas.Top="20"/>
    </Canvas>
</Window>

