<Window x:Class="SharpShot.UI.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SharpShot Update" Height="400" Width="500"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        ShowInTaskbar="True">
    <Border CornerRadius="10" Background="#FF1E1E1E" BorderBrush="#FF3E3E3E" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="315" ShadowDepth="5" BlurRadius="10" Opacity="0.5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#FF2D2D2D" CornerRadius="10,10,0,0" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Update Available" FontSize="18" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                    <Button Grid.Column="1" Content="âœ•" Width="30" Height="30" 
                            Click="CloseButton_Click" Background="Transparent" 
                            BorderThickness="0" Foreground="White" FontSize="16"
                            Cursor="Hand" ToolTip="Close"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15">
                <StackPanel>
                    <TextBlock TextWrapping="Wrap" Foreground="White" Margin="0,0,0,10">
                        <Run Text="A new version of SharpShot is available!" FontWeight="Bold"/>
                    </TextBlock>
                    
                    <TextBlock Name="VersionText" TextWrapping="Wrap" Foreground="#FFCCCCCC" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Release Notes:" FontWeight="Bold" Foreground="White" Margin="0,10,0,5"/>
                    <Border Background="#FF2D2D2D" CornerRadius="5" Padding="10" MaxHeight="200">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock Name="ReleaseNotesText" TextWrapping="Wrap" Foreground="#FFCCCCCC"/>
                        </ScrollViewer>
                    </Border>

                    <!-- Progress Section (shown during download) -->
                    <StackPanel Name="ProgressPanel" Visibility="Collapsed" Margin="0,15,0,0">
                        <TextBlock Name="ProgressStatusText" TextWrapping="Wrap" Foreground="White" Margin="0,0,0,10"/>
                        <ProgressBar Name="ProgressBar" Height="20" Margin="0,0,0,5"/>
                        <TextBlock Name="ProgressPercentageText" TextAlignment="Center" Foreground="#FFCCCCCC" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15,10,15,10">
                <Button Name="LaterButton" Content="Later" Width="100" Height="35" 
                        Click="LaterButton_Click" Margin="0,0,10,0"
                        Background="#FF3E3E3E" Foreground="White" BorderThickness="0" 
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" 
                                                Background="{TemplateBinding Background}" 
                                                CornerRadius="5" 
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FF4E4E4E"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FF2E2E2E"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Name="UpdateButton" Content="Update Now" Width="120" Height="35" 
                        Click="UpdateButton_Click"
                        Background="#FFFF8C00" Foreground="Black" BorderThickness="0" 
                        FontWeight="Bold" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" 
                                                Background="{TemplateBinding Background}" 
                                                CornerRadius="5" 
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FFFFA500"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FFCC7000"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Status Text (for errors) -->
            <TextBlock Grid.Row="3" Name="StatusText" TextWrapping="Wrap" 
                      Foreground="#FFFF6B6B" Margin="15,0,15,10" 
                      Visibility="Collapsed" TextAlignment="Center"/>
        </Grid>
    </Border>
</Window>

